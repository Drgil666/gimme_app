<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_color_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/listview_personal_msg_list_icon"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@mipmap/app_icon"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp" />

    <TextView
        android:id="@+id/listview_personal_msg_list_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="15sp"
        android:layout_toEndOf="@id/listview_personal_msg_list_icon" />

    <TextView
        android:id="@+id/listview_personal_msg_list_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="留言"
        android:textSize="20sp"
        android:layout_marginTop="2sp"
        android:layout_marginStart="15sp"
        android:layout_below="@+id/listview_personal_msg_list_nick"
        android:layout_toEndOf="@id/listview_personal_msg_list_icon" />

    <TextView
        android:id="@+id/listview_personal_msg_list_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源"
        android:textSize="20sp"
        android:layout_marginTop="2sp"
        android:layout_marginStart="15sp"
        android:layout_below="@+id/listview_personal_msg_list_note"
        android:layout_toEndOf="@id/listview_personal_msg_list_icon" />
</RelativeLayout>