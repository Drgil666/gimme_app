<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:orientation="vertical">
    <!--左侧聊天内容-->
    <LinearLayout
        android:id="@+id/left_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:dividerPadding="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/left_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@mipmap/app_icon" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textColor="#9F9F9F"
                android:textSize="15sp" />

            <LinearLayout
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/shape_0111_10dp_corners"
                android:orientation="horizontal"
                android:padding="10dp"
                android:focusable="true">

                <TextView
                    android:id="@+id/left_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111111"
                    android:textIsSelectable="true"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--右侧聊天内容-->
    <LinearLayout
        android:id="@+id/right_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="15sp"
        android:dividerPadding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textColor="#9F9F9F"
                android:textSize="15sp" />

            <LinearLayout
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/shape_1011_10dp_corners"
                android:orientation="horizontal"
                android:padding="10dp"
                android:focusable="true">

                <TextView
                    android:id="@+id/right_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2222"
                    android:textIsSelectable="true"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView

            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/right_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@mipmap/app_icon" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>