<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ChatMsgActivity">

    <RelativeLayout
        android:id="@+id/chat_msg_search_layout"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/gimme_background_dark">

        <EditText
            android:id="@+id/chat_msg_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="15sp"
            android:layout_toStartOf="@+id/chat_msg_search_cancel"
            android:background="@drawable/rounded_edit_view_white_5px" />

        <TextView
            android:id="@+id/chat_msg_search_cancel"
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:text="取消"
            android:textColor="@color/gimme_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/chat_msg_listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/chat_msg_search_layout"
        android:background="@color/gimme_background_lighter" />
</RelativeLayout>