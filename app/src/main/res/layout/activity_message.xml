<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gimme_background"
    tools:context=".view.activity.MessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--顶边栏-->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="@color/white">

            <TextView
                android:id="@+id/top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="消息"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/top_right_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20sp"
                android:background="@mipmap/app_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_bar"
            android:layout_below="@+id/top_bar"
            android:background="@color/teal_700">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@color/teal_200">

            </RelativeLayout>
        </RelativeLayout>
        <!--底边栏-->
        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0sp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/message_layout"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_200"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/friend_layout"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_info_layout"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_700"></RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>