<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gimme_background_lighter"
    tools:context=".view.fragment.MessageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--搜索框-->
        <RelativeLayout
            android:id="@+id/message_search_layout"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@color/gimme_background_dark">

            <EditText
                android:id="@+id/message_search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/rounded_edit_view_white_10px"
                android:hint="  搜索">

            </EditText>
        </RelativeLayout>

        <com.project.gimme.view.listview.PullRefreshListView
            android:id="@+id/message_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_search_layout"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null" />
    </RelativeLayout>
</FrameLayout>