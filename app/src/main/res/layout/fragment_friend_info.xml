<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gimme_background_lighter"
    tools:context=".view.fragment.FriendInfoFragment">
    <RelativeLayout
        android:id="@+id/fragment_friend_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp">

        <ImageView
            android:id="@+id/fragment_friend_info_icon"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_centerVertical="true"
            android:src="@mipmap/app_icon" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/fragment_friend_info_icon">

            <TextView
                android:id="@+id/fragment_friend_info_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_friend_info_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_friend_info_nick"
                android:layout_marginTop="15sp"
                android:text="公司名"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/fragment_friend_info_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_friend_info_company"
                android:layout_marginTop="15sp"
                android:text="个性签名"
                android:textColor="@color/gimme_font1"
                android:textSize="22sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/fragment_friend_info_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fragment_friend_info_layout"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="10sp" />

    <Button
        android:id="@+id/fragment_friend_info_button"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80sp"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:text="发信息" />
</RelativeLayout>