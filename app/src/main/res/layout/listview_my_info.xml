<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gimme_background"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/listview_my_info_left_area"
        android:layout_width="160sp"
        android:layout_height="80sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/rounded_edit_view_white">

        <ImageView
            android:id="@+id/listview_my_info_left_area_icon"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:src="@mipmap/app_icon" />

        <TextView
            android:id="@+id/listview_my_info_left_area_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@+id/listview_my_info_left_area_icon"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listview_my_info_left_area_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="40sp"
            android:layout_toEndOf="@+id/listview_my_info_left_area_icon"
            android:text="description"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/listview_my_info_right_area"
        android:layout_width="160sp"
        android:layout_height="80sp"
        android:layout_marginEnd="20sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/rounded_edit_view_white">

        <ImageView
            android:id="@+id/listview_my_info_right_area_icon"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:src="@mipmap/app_icon" />

        <TextView
            android:id="@+id/listview_my_info_right_area_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@+id/listview_my_info_right_area_icon"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listview_my_info_right_area_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="40sp"
            android:layout_toEndOf="@+id/listview_my_info_right_area_icon"
            android:text="description"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>