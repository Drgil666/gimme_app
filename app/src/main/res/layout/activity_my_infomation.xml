<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gimme_background_lighter"
    tools:context=".view.activity.MyInformationActivity">
    <!--顶边栏-->
    <RelativeLayout
        android:id="@+id/my_information_top_bar"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@color/gimme_background_lighter">

        <ImageView
            android:id="@+id/my_information_top_left_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20sp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_information_info_layout"
        android:layout_width="wrap_content"
        android:layout_below="@+id/my_information_top_bar"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp">

        <ImageView
            android:id="@+id/my_information_info_icon"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_centerVertical="true"
            android:src="@mipmap/default_icon" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/my_information_info_icon">

            <TextView
                android:id="@+id/my_information_info_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_information_info_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_information_info_nick"
                android:layout_marginTop="15sp"
                android:text="公司名"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/my_information_info_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_information_info_company"
                android:layout_marginTop="15sp"
                android:text="个性签名"
                android:textColor="@color/gimme_font1"
                android:textSize="22sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/my_information_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_information_info_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/rounded_edit_view_white_10px" />
</RelativeLayout>